# Environment Variables Template
# Location: backend/.env.example

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_PREFIX=/api

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:dontknow@localhost:5432/qonvey?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-at-least-32-characters
JWT_REFRESH_EXPIRE=30d

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# PAYMENT - PAYNOW (Zimbabwe)
# ============================================
PAYNOW_INTEGRATION_ID=your-paynow-integration-id
PAYNOW_INTEGRATION_KEY=your-paynow-integration-key
PAYNOW_RETURN_URL=http://localhost:3000/payment/return
PAYNOW_RESULT_URL=http://localhost:5000/api/v1/payments/webhook/paynow

# ============================================
# SMS - TWILIO
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# SMS - AFRICA'S TALKING (Alternative)
# ============================================
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=your-africastalking-username

# ============================================
# EMAIL
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@qonvey.co.zw

# ============================================
# FIREBASE (Push Notifications)
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-firebase-admin@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# CLOUDINARY (Image/File Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# AWS S3 (Alternative Storage)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=af-south-1

# ============================================
# GOOGLE MAPS
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ============================================
# SUBSCRIPTION PRICING (USD)
# ============================================
SUBSCRIPTION_STARTER_PRICE=3
SUBSCRIPTION_PROFESSIONAL_PRICE=5
SUBSCRIPTION_BUSINESS_PRICE=7
SUBSCRIPTION_TRIAL_DAYS=30

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SOCKET_IO=true
ENABLE_RATE_LIMITING=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# CLIENT URLS
# ============================================
CLIENT_URL=http://localhost:3000
MOBILE_DEEP_LINK=qonvey://
APP_STORE_URL=
PLAY_STORE_URL=

# ============================================
# ADMIN & SUPPORT
# ============================================
ADMIN_EMAIL=admin@qonvey.co.zw
ADMIN_PHONE=+263712345678
SUPPORT_EMAIL=support@qonvey.co.zw
SUPPORT_PHONE=+263712345678
SUPPORT_WHATSAPP=+263712345678

APP_STORE_URL=apps.apple.com/app/idXXXXXXXXX
PLAY_STORE_URL=apps.apple.com/app/idcom.yourcompany.yourapp